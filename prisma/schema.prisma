generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./wallet.sqlite"
}

model Wallet {
  id             String    @id @default(uuid())
  seed           String
  seed_iv        String?
  representative String    @default("nano_3arg3asgtigae3xckabaaewkx3bzsh7nwz7jkmjos79ihyaxwphhm6qgjps4")
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  accounts       Account[]

  @@map("wallets")
}

model Account {
  account       String   @id
  account_index Int
  balance       String   @default("0")
  wallet_id     String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  wallet        Wallet   @relation(fields: [wallet_id], references: [id], onDelete: Cascade)
  blocks        Block[]
  work          Work?

  @@unique([wallet_id, account_index])
  @@map("accounts")
}

model Block {
  hash       String   @id
  link       String
  subtype    String
  amount     String
  account_id String
  time       DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  account    Account  @relation(fields: [account_id], references: [account], onDelete: Cascade)

  @@map("blocks")
}

model Work {
  address    String   @id
  hash       String   @unique
  work       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  account    Account  @relation(fields: [address], references: [account], onDelete: Cascade)

  @@map("works")
}
